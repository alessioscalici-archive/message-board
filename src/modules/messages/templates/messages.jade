#messages-view
  spinner#messages-spinner(start-visible='true')
  audio#audio-notification(src='assets/audio/notification.mp3' preload='auto')
  ul.message-list
    li(ng-repeat='msg in messages')
      message-item(message='msg')
    li#message-bottom(smooth-scroll='')
  form#message-input
    spinner#new-message-spinner
    input(type='text' ng-model='newMessageText' placeholder='Say something...')
    button#submit-text(type='submit' ng-click='postMsg()' ng-disabled='!newMessageText || postingMessage' aria-label='Send')
      span.glyphicon.glyphicon-share-alt